
@{
    ViewData["Title"] = "Log";
}
@model List<dynamic>
<div class="content">
    <div class="page-header">
        <div>
            <h3>Log</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/dashboard">Anasayfa</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Log</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Log</li>
                </ol>
            </nav>
        </div>
        <div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="datatable" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>TARİH</th>
                                    <th>YÖNETİCİ</th>
                                    <th>IP</th>
                                    <th>MESAJ</th>
                                    <th>URL</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>

    $(document).ready(function () {
        $('#datatable').DataTable({
            data: @Json.Serialize(Model),
            dom: 'Bfrtip',
            buttons: ['excel', 'pdf'],
            language: { url:'/vendors/dataTable/turkish.json'},
            columns: [
                { data: 'DATETIME' },
                { data: 'USERNAME' },
                { data: 'HOSTADDRESS' },
                { data: 'MESSAGE' },
                { data: 'HOSTNAME' },
            ],
            order:[[0,'desc']]
        });
    });
</script>
