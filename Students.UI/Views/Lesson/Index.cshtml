
@{
    ViewData["Title"] = "Dersler";
}
@model List<dynamic>
<div class="content">
    <div class="page-header">
        <div>
            <h3>Dersler</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/dashboard">Anasayfa</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Dersler</li>
                </ol>
            </nav>
        </div>
        <div>
            <a class="btn btn-primary ml-2 btn-pulse" href="/add-lesson"><i data-feather="plus"></i></a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="datatable" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>SINIF</th>
                                    <th>AD</th>
                                    <th>KOD</th>
                                    <th>SIRA</th>
                                    <th>DURUM</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>

    $(document).ready(function () {
        $('#datatable').DataTable({
            data: @Json.Serialize(Model),
            dom: 'Bfrtip',
            buttons: ['excel', 'pdf'],
            language: { url:'/vendors/dataTable/turkish.json'},
            columns: [
                { data: 'CLASSNAME' },
                { data: 'NAME' },
                { data: 'CODE' },
                { data: 'SORT' },
                { data: 'STATUS', render: function (data) { return (data == 1 ? '<div class=\"badge badge-success\"> </div>' : '<div class=\"badge badge-danger\"> </div>') }},
                {
                    data: 'LESSONID', orderable: false, class: 'text-right',
                    render: function (data) {
                        return '<div class="dropdown"><a href="#" class="btn btn-outline-light tn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></a><div class="dropdown-menu dropdown-menu-right"><a href="/edit-lesson/' + data +'" class="dropdown-item">Düzenle</a></div></div>'
                    }
                }
            ],
            order:[['3','asc']]
        });
    });
</script>
